@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}   

<!-- Hero Section -->
<div class="hero-section">
    <div class="hero-content">
        <img src="~/images/lagkawputi.png" alt="Lagkaw Logo" class="hero-logo" asp-append-version="true">
        <h1 class="display-4">Home Owners</h1>
        <p class="hero-text">
            A Place to Belong, a Home <br />to Stay—Find Comfort with <span class="highlight">Lagkaw!</span>
        </p>
        <a href="#" class="btn btn-yellow">Search for Homes</a>
    </div>
</div>

<!-- Page 2 Section -->
<div class="page2-1">
    <!-- Left Side: Large Image -->
    <div class="page2-left">
        <img src="/images/bike.png" alt="Bike Image" class="bikee" />
        <h1 class="context2">
            Bring simplicity to the <br /> housing market.
        </h1>
    </div>

    <!-- Right Side: Text + Small Images -->
    <div class="page2-right">
        <img src="~/images/small1.png" alt="Small House 1">
        <img src="~/images/small2.png" alt="Small House 2">
        <p>
            Lagkaw is a home where simplicity meets comfort. Every space is designed to bring warmth and relaxation, making it easy to unwind and feel at peace. Here, you'll find a sense of belonging, where little moments turn into cherished memories.
        </p>
        <a href="#" class="btn-orange">Discover what makes Lagkaw special.</a>
    </div>
</div>
