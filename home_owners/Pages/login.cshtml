@page
@model home_owners.Pages.Index2Model
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: url('/images/bg.png') no-repeat center center fixed;
            background-size: cover;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            background: rgba(195, 146, 79, 0.8); /* Adjusted navbar color */
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
        }

            .navbar img {
                height: 40px;
            }

        .navbar-nav {
            list-style: none;
            display: flex;
            gap: 20px;
            margin: 0;
            padding: 0;
        }

            .navbar-nav li {
                display: inline;
            }

            .navbar-nav a {
                text-decoration: none;
                color: white;
                font-size: 16px;
                padding: 8px 12px;
            }

                .navbar-nav a:hover {
                    background: rgba(0, 0, 0, 0.1);
                    border-radius: 5px;
                }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            padding-top: 60px; /* To prevent content from overlapping navbar */
        }

        .login-box {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            text-align: center;
            width: 450px;
        
        }

            .login-box img {
                width: 120px;
                margin-bottom: 20px;
            }

            .login-box input {
                width: 90%;
                padding: 10px;
                margin: 10px 0;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .login-box button {
                background: #003d29;
                color: white;
                padding: 10px;
                width: 100%;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

        .register-link {
            margin-top: 10px;
            font-size: 14px;
        }

            .register-link a {
                color: #007bff;
                text-decoration: none;
            }
    </style>
</head>
<body>

    <!-- Navbar -->
    <header class="navbar">
        <a href="/Index">
            <img src="/images/lagkaw.png" alt="Home Owners Logo">
        </a>
        <ul class="navbar-nav">
            <li><a href="/Index1#amenities">Amenities</a></li>
            <li><a href="/Index1#about">About Us</a></li>
            <li><a href="/Index1#contact">Contact</a></li>
            <li><a href="/login">Login/Register</a></li>
        </ul>
    </header>

    <div class="container">
        <div class="login-box">
            <img src="/images/lagkaw.png" alt="Logo">
            <form method="post">
                <input type="text" name="Username" placeholder="Username" required>
                <input type="password" name="Password" placeholder="Password" required>
                <button type="submit">Login</button>
            </form>
            <p class="register-link">No account yet? <a asp-page="/register">Register here!</a></p>
        </div>
    </div>

</body>
</html>
