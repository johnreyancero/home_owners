@page
@model home_owners.Pages.Admin.AdminBookingsModel
@{
    ViewBag.Title = "Admin Bookings";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div style="display: flex; height: 100vh; background: url('/images/bg-image.jpg') no-repeat center center fixed; background-size: cover;">
    <!-- Sidebar -->
    <div style="width: 250px; background-color: rgba(255, 165, 0, 0.3); padding: 20px; display: flex; flex-direction: column; justify-content: space-between;">
        <div>
            <h2 style="color: #1A3A3A; font-weight: 800;">DASH<br>BOARD</h2>
            <a class="btn btn-warning w-100 mb-3" asp-page="/Admin/AdminDashboard">DASHBOARD</a>
            <a class="btn btn-warning w-100 mb-3" asp-page="/Admin/AdminBookings">BOOKINGS</a>
            <button class="btn btn-warning w-100 mb-3">CUSTOMERS</button>
            <button class="btn btn-warning w-100 mb-3">RESERVATION</button>
        </div>
        <div>
            <button class="btn btn-danger w-100">Log out</button>
            <p class="text-center mt-3" style="font-size: 12px;">@DateTime.Now.ToString("MMMM dd, yyyy")</p>
        </div>
    </div>

    <!-- Main Content -->
    <div style="flex: 1; padding: 30px; color: #1A3A3A;">
        <h1 style="font-weight: 800;">BOOKINGS</h1>

        <table class="table table-bordered mt-4">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>GUEST NAME</th>
                    <th>EMAIL</th>
                    <th>CONTACT</th>
                    <th>STATUS</th> <!-- New Column for Status -->
                    <th>ACTION</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model.Bookings)
                {
                    <tr>
                        <td>@booking.Id</td>
                        <td>@booking.GuestName</td>
                        <td>@booking.Email</td>
                        <td>@booking.Contact</td>
                        <td>
                            <!-- Status with color based on its value -->
                            <span class="badge" style="background-color: @(GetStatusColor(booking.Status))">
                                @booking.Status
                            </span>
                        </td>
                        <td>
                            <a asp-page="/Admin/AdminGuestInfo" asp-route-id="@booking.Id" class="btn btn-primary btn-sm">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .card {
        border: 1px solid #ccc;
        background-color: #fff;
    }
    .btn-warning {
        background-color: orange;
        border: none;
        font-weight: bold;
    }
    .btn-danger {
        background-color: #8B0000;
        border: none;
    }
    .btn-primary {
        background-color: #007bff;
        border: none;
    }
    .table {
        background-color: #fff;
    }
    .thead-dark th {
        background-color: #343a40;
        color: #fff;
    }

    .badge {
        padding: 5px 10px;
        color: white;
        border-radius: 12px;
    }
</style>

@functions {
    // Function to get color based on status
    public string GetStatusColor(string status)
    {
        switch (status)
        {
            case "Confirmed":
                return "#28a745"; // Green for confirmed
            case "Pending":
                return "#ffc107"; // Yellow for pending
            case "Cancelled":
                return "#dc3545"; // Red for cancelled
            default:
                return "#6c757d"; // Grey for unknown status
        }
    }
}
