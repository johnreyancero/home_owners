@page
@model home_owners.Pages.Admin.AdminDashboardModel
@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div style="display: flex; height: 100vh; background: url('/images/bg-image.jpg') no-repeat center center fixed; background-size: cover;">
    <!-- Sidebar -->
    <div style="width: 250px; background-color: rgba(255, 165, 0, 0.3); padding: 20px; display: flex; flex-direction: column; justify-content: space-between;">
        <div>
            <h2 style="color: #1A3A3A; font-weight: 800;">DASH<br>BOARD</h2>
            <button class="btn btn-warning w-100 mb-3">DASHBOARD</button>
            <a class="btn btn-warning w-100 mb-3" asp-page="/Admin/AdminBookings">BOOKINGS</a>
            <button class="btn btn-warning w-100 mb-3">CUSTOMERS</button>
            <button class="btn btn-warning w-100 mb-3">RESERVATION</button>
        </div>
        <div>
            <button class="btn btn-danger w-100">Log out</button>
            <p class="text-center mt-3" style="font-size: 12px;">@DateTime.Now.ToString("MMMM dd, yyyy")</p>
        </div>
    </div>

    <!-- Main Content -->
    <div style="flex: 1; padding: 30px; color: #1A3A3A;">
        <h1 style="font-weight: 800;">ADMIN DASHBOARD</h1>

        <!-- Stats Cards -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-center p-3">
                    <h5>CHECK-INS</h5>
                    <h2>75</h2> <!-- You can make this dynamic if needed -->
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center p-3">
                    <h5>CANCELLATION</h5>
                    <h2>12</h2> <!-- You can make this dynamic if needed -->
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center p-3">
                    <h5>TOTAL BOOKINGS</h5>
                    <h2>@Model.TotalBookings</h2> <!-- Dynamic total bookings -->
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center p-3">
                    <h5>REVENUE</h5>
                    <h2>$1,205</h2> <!-- You can make this dynamic if needed -->
                </div>
            </div>
        </div>

        <!-- Recent Bookings -->
        <h3 class="mt-5" style="font-weight: 800;">Recent Bookings</h3>
        <table class="table table-bordered mt-3">
            <thead class="thead-dark">
                <tr>
                    <th>GUEST</th>
                    <th>CHECK-IN</th>
                    <th>CHECK-OUT</th>
                    <th>ROOM</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model.RecentBookings)
                {
                    <tr>
                        <td>@booking.GuestName</td>
                        <td>@booking.CheckIn.ToString("MMMM dd")</td>
                        <td>@booking.CheckOut.ToString("MMMM dd")</td>
                        <td>@booking.RoomName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .card {
        border: 1px solid #ccc;
        background-color: #fff;
    }
    .btn-warning {
        background-color: orange;
        border: none;
        font-weight: bold;
    }
    .btn-danger {
        background-color: #8B0000;
        border: none;
    }
    .table {
        background-color: #fff;
    }
    .thead-dark th {
        background-color: #343a40;
        color: #fff;
    }
</style>
