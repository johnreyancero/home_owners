@page
@model home_owners.Pages.Users.UserProfileModel
@{
    ViewData["Title"] = "User Profile";
}

<style>
    .user-profile-container {
        display: flex;
        background: white;
        border-radius: 10px;
        margin: 40px auto;
        padding: 30px;
        width: 90%;
        max-width: 1100px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    .sidebar {
        width: 25%;
        border-right: 1px solid #ddd;
        padding-right: 20px;
    }

    .sidebar h5 {
        margin-bottom: 20px;
    }

    .sidebar ul {
        list-style: none;
        padding: 0;
    }

    .sidebar .nav-item {
        margin: 15px 0;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 10px;
        cursor: pointer;
    }

    .profile-main {
        width: 75%;
        padding-left: 30px;
    }

    .profile-header {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background: #ccc;
    }

    .user-details {
        flex-grow: 1;
    }

    .change-btn {
        height: 40px;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .btn-outline-dark {
        border: 1px solid #333;
        color: #333;
        background-color: transparent;
        transition: all 0.3s;
    }

    .btn-outline-dark:hover {
        background-color: #333;
        color: #fff;
    }
</style>

<div class="user-profile-container">
    <div class="sidebar">
        <h5>User Profile</h5>
        <ul class="nav flex-column">
            <li class="nav-item"><i class="bi bi-person"></i> User Info</li>
            <li class="nav-item"><i class="bi bi-house"></i> Home</li>
            <li class="nav-item"><i class="bi bi-gear"></i> Settings</li>
            <li class="nav-item"><i class="bi bi-box-arrow-right"></i> Logout</li>
        </ul>
    </div>

    <div class="profile-main">
        <div class="profile-header">
            <img src="~/images/person.png" alt="Avatar" class="avatar" />
            <div class="user-details">
                <strong>@Model.User.FirstName @Model.User.LastName</strong><br />
                @Model.User.Email<br />
                @Model.User.ContactNumber
            </div>
            <button class="btn btn-outline-dark change-btn">Change</button>
        </div>

        <form method="post">
            <div class="form-group mt-4">
                <label>First Name</label>
                <input type="text" class="form-control" asp-for="User.FirstName" />
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input type="text" class="form-control" asp-for="User.LastName" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" asp-for="User.Email" />
            </div>
            <div class="form-group">
                <label>Phone</label>
                <input type="text" class="form-control" asp-for="User.ContactNumber" />
            </div>
            <button type="submit" class="btn btn-outline-dark mt-3">Save</button>
        </form>
    </div>
</div>
